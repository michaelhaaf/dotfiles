#!/usr/bin/env bash

[[ $(hostname) = "lattitude" ]] && primary='eDP1'
[[ $(hostname) = "home" ]] && primary='HDMI-0'

# all other monitors
mapfile -t monitors < <(xrandr -q | grep -v "${primary}" | awk '/\<connected\>/ {print $1}')
xrandr --output "$primary" --auto  --primary

for monitor in "${monitors[@]}"; do
  xrandr --output "$monitor" --auto --right-of "$primary"
done
