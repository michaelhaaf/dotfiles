#!/usr/bin/env bash

if [ -n "$BASH_LIBRARY" ]; then 
  . "$BASH_LIBRARY/ffmpeg"; 
  printf "%s\n" "Starting...";
else 
  printf "%s\n" "BASH_LIBRARY environment variable missing. Exiting." >&2; 
  exit 1; 
fi

if [ -z "$1" ]; then OUTPUT=""; else OUTPUT="$1"; fi

ffmpeg-capture-winselect-no-audio "$OUTPUT"

# width=1280
# height=720
# ffmpeg-to-webm $width $height /tmp/capture.mkv realtime
# ffmpeg-to-mp4 $width $height /tmp/capture.mkv ultrafast

# width=640
# height=360
# ffmpeg-to-webm $width $height /tmp/capture.mkv realtime
# ffmpeg-to-mp4 $width $height /tmp/capture.mkv ultrafast
