##---------- Keybindings for bspwm ----------##

# Terminal (kitty)
super + Return
	bspterm

# Terminal (floating)
super + shift + Return
	bspterm --float

# Terminal (fullscreen)
super + t
	bspterm --full

##---------- Rofi Launcher & Menus ----------##

# Rofi App Launcher
alt + F1
	sh ~/.config/bspwm/rofi/bin/launcher

# Rofi Network Menu
super + n
	nmd

# Audio Control
super + a
  pavucontrol

# Rofi Themes Menu
ctrl + alt + t
	sh ~/.config/bspwm/rofi/bin/themes

# Rofi Menus/Applets
super + {w,x,r,s}
	sh ~/.config/bspwm/rofi/bin/{windows,powermenu,asroot,screenshot}

# Hotkeys, Password Manager
super + {slash, p, shift + p, a}
	sh ~/.config/bspwm/rofi/bin/{sxhkd-help,rofi-pass,rofi-pass --insert}

# Bluetooth, Camera control, Music
super + alt + {b, t, w, r, c, m}
	sh ~/.config/bspwm/rofi/bin/{rofi-bluetooth,tetristoggle,camtoggle,camreset}

# Toggle Compositor
super + alt + c
  pkill -f picom || picom --config ~/.config/bspwm/picom.conf

##---------- Applications ----------##

# Launch Apps
super + shift + {f,w,e}
	{thunar,firefox,geany}

# Terminal Apps
ctrl + alt + {v,r,h}
	kitty {nvim,ranger,htop}

# Color Picker
super + alt + p
	color-gpick

# Lockscreen
ctrl + alt + l
  betterlockscreen --lock

##---------- System Keys ----------##

# Take screenshot
Print
	takeshot --now
	
# Take screenshot in five seconds
alt + Print
	takeshot --in5

# Take screenshot in ten seconds
shift + Print
	takeshot --in10

# Take screenshot of active window
ctrl + Print
	takeshot --win

# Take screenshot of area
ctrl + alt + Print
	takeshot --area

# Brighness control
XF86MonBrightness{Up,Down}
	brightness{ --inc, --dec}
	
# Volume control
XF86Audio{RaiseVolume,LowerVolume}
	volume{ --inc, --dec}

XF86AudioMute
	volume --toggle

XF86AudioMicMute
	volume --toggle-mic
 	
# Music control
XF86Audio{Next,Prev,Play,Stop}
	mpc {next,prev,toggle,stop}

# Volume control (No FN key)
ctrl + alt + {Up,Down}
	volume{ --inc, --dec}

ctrl + alt + {m, shift + m}
	volume{ --toggle, --toggle-mic}

##---------- Bspwm ----------##

# Close App
super + {_,shift + }c
	bspc node -{c,k}

# Reload Keybindings
super + Escape
	pkill -USR1 -x sxhkd && dunstify "sxhkd: keybindings reloaded"

# kill window
ctrl + alt + Escape
  xkill

# Quit/Restart bspwm
ctrl + shift + {q,r}
	bspc {quit,wm -r} && dunstify "bspwm: wm reloaded"
	
# Preselect the direction; q to cancel
super + ctrl + {Left,Down,Up,Right,q}
	bspc node -p {west,south,north,east,cancel}

# Preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# Desktop: Fullscreen or Monocle
super + m
	bspc desktop -l next

# Application: Fullscreen or Monocle
super + f
    bspc node -t "~"fullscreen

# Toggle beetwen floating & tiled
super + space
    bspc node -t "~"{floating,tiled}

# Pseudo Tiled & tiled mode
super + shift + space
    bspc node -t "~"{pseudo_tiled,tiled}

# Set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# Focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# Change focus to next window, including floating window
alt + {_,shift + }Tab
	bspc node -f {next.local,prev.local}

# Switch workspace
super + bracket{left,right}
	bspc desktop -f {prev.local,next.local}

# Switch workspace
ctrl + alt + {Left,Right}
	bspc desktop -f {prev.local,next.local}

# Switch to last opened workspace
super + {Tab,grave}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# Send focused window to another workspace
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# Hide/Unhide Window
super + shift + i
	bspwinmask		

# Expanding windows
super + control + {h,l,k,j}
	bspc node -z {left -20 0,right 20 0,top 0 -20,bottom 0 20}
	
## Shrinking windows
super + alt + {h,l,k,j}
	bspc node -z {left 20 0,right -20 0,top 0 20,bottom 0 -20}
	
## Move floating windows
super + shift + {Left,Down,Up,Right}
	bspc node -v {-50 0,0 50,0 -50,50 0}

# change resize ratio
super + KP_Subtract
    ~/.config/bspwm/bin/bspchgratio

# focus parent node
super + KP_Add
    bspc node -f @parent

##### NUMPAD #####
# placeholders for extra numpad buttons
super + KP_{Divide,Multiply,Subtract,Add,Decimal,Enter,Separator}
    notify-send {0-9,Divide,Multiply,Subtract,Add,Decimal,Enter,Separator}

# windows: numpad numbers can be used the same as top row numbers
super + {_,shift + }KP_{Home,Up,Prior,Left,Begin,Right,End,Down,Next,Insert}
	bspc {desktop -f,node -d} '^{7,8,9,4,5,6,1,2,3,10}'

# preselect the ratio: numpad numbers can be used the same as top row numbers
super + ctrl + KP_{Home,Up,Prior,Left,Begin,Right,End,Down,Next}
	bspc node -o 0.'{7,8,9,4,5,6,1,2,3}'


##---------- EOF ----------##
